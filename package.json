{
  "name": "nope-rule",
  "version": "0.1.0",
  "author": "Fajar Nugraha <fajarnugraha37@gmail.com>",
  "license": "MIT",
  "type": "module",
  "main": "dist/cjs/index.js",
  "types": "dist/cjs/index.d.ts",
  "module": "dist/esm/index.js",
  "exports": {
    ".": {
      "node": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "files": [
    "dist/cjs",
    "dist/esm",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun run build:clean && bun run build:cjs && bun run build:esm && bun run build:package-json",
    "build:clean": "rimraf dist",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json", 
    "build:package-json": "echo {\\\"type\\\":\\\"commonjs\\\"} > dist/cjs/package.json && echo {\\\"type\\\":\\\"module\\\"} > dist/esm/package.json",
    "build:watch": "concurrently \"tsc -p tsconfig.cjs.json --watch\" \"tsc -p tsconfig.esm.json --watch\"",
    "lint": "tsc --noEmit",
    "test": "bun test"
  },
  "dependencies": {
    "@electric-sql/pglite": "^0.3.11",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "hono": "^4.10.3",
    "jsep": "^1.4.0",
    "json-logic-engine": "^5.0.2",
    "json-logic-js": "^2.0.5",
    "json-schema": "^0.4.0",
    "postgres": "^3.4.7",
    "ulid": "^3.0.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/json-logic-js": "^2.0.8",
    "@types/json-schema": "^7.0.15",
    "concurrently": "^9.1.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.3"
  },
  "engines": {
    "bun": ">=1.1.0"
  }
}
